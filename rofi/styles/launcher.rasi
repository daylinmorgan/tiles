@import "default.rasi"
@import "colors.rasi"

mainbox {
    padding: 12px;
}

entry {
    placeholder: "search";
    placeholder-color: @foreground-light;
}

listview {
    margin: 12px 0 0;
    lines: 8;
    columns: 1;
    fixed-height: false;
}

element {
    padding: 8px 16px;
    spacing: 8px;
    border-radius: 4px;
}

element-icon {
    size: 1em;
    vertical-align: 0.5;
}
